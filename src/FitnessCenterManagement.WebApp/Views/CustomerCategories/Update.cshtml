@using FitnessCenterManagement.WebApp.Views.Shared.Resources
@using FitnessCenterManagement.WebApp.Views.CustomerCategories.Resources
@model FitnessCenterManagement.WebApp.Models.CustomerCategoriesEditModel
@{
    ViewData["Title"] = CustomerCategoriesRes.UpdateItem;
}

<h2>@ViewData["Title"]</h2>
<hr />
<form asp-controller="CustomerCategories" asp-action="edit" asp-antiforgery="true" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <input asp-for="Id" hidden="hidden" />

    <div class="form-group row">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" , placeholder="@CustomerCategoriesRes.NameLabel" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="SaleCoefficient" class="col-md-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="SaleCoefficient" class="form-control" , placeholder="@CustomerCategoriesRes.SaleCoefficientLabel" />
            <span asp-validation-for="SaleCoefficient" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary btn-icon" value="@SharedStringRes.UpdateBtn" />
        </div>
    </div>
</form>

@await Html.PartialAsync("_ReturnGrayButton", ("Index", "CustomerCategories", SharedStringRes.GoBackBtn))
