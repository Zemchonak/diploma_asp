@using FitnessCenterManagement.WebApp.Views.Profile.Resources
@model FitnessCenterManagement.WebApp.Models.ProfileChangeBalanceModel
@{
    ViewBag.Title = ProfileRes.ChangeBalanceLabel;
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeBalance", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Balance, new { @class = "col-md-2 control-label" })
        <div class="col-md-4 p-0">
            @Html.TextBoxFor(m => m.Balance, new { @class = "form-control", placeholder = ProfileRes.BalanceLabel })
            <p class="text-danger">@Html.ValidationMessageFor(m => m.Balance)</p>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            <input type="submit" value="@ProfileRes.SaveBtnValue" class="btn btn-primary" />
        </div>
    </div>
    }
