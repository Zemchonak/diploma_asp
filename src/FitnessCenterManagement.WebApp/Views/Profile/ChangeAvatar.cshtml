@using FitnessCenterManagement.WebApp.Views.Profile.Resources
@using FitnessCenterManagement.WebApp.Views.Shared.Resources
@model FitnessCenterManagement.WebApp.Models.ImageUploadModel
@{ ViewBag.Title = ProfileRes.ChangeAvatarBtn; }

<div class="container">
    <h2>@ViewBag.Title</h2>
    <p>@ViewBag.Message</p>
    <div class="row">
        <div class="alert alert-primary col-md-10" role="alert">
            <strong>@SharedStringRes.AttentionWord!</strong> @ProfileRes.AvatarAdvicePhrase
        </div>
        <div class="col-md-12">
            <img class="card-img-top" style="float: left; margin-right: 20px; margin-bottom:10px; margin-right: 20px; width: 18rem;"
                 src="/Profile/avatar" alt="Profile Image" />
            <div class="col-md-10">
                <h5>@ProfileRes.ChooseFileHintText</h5>
                @using (Html.BeginForm("ChangeAvatar", "Profile", FormMethod.Post, new { enctype = "multipart/Form-data" }))
                {
    @Html.AntiForgeryToken()
                    <input type="file" name="file" id="file" style="width:50%" />
                                    <input type="submit" value="@ProfileRes.SaveBtnValue" class="btn btn-outline-primary" />}
            </div>

            <hr />
        </div>
    </div>
    <br />
    <a asp-action="Index" asp-controller="Profile" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> @SharedStringRes.GoBackBtn</a>
</div>