@using FitnessCenterManagement.WebApp.Views.Auth.Resources
@model FitnessCenterManagement.WebApp.Models.RegisterModel

@{
    ViewBag.Title = AccountRes.RegisterTitle;
}

<div class="card-group">
    <div class="card">
        <h2 style="align-self: center">@ViewBag.Title</h2>
        <div class="mb-5 ml-5 mr-5">
            <section id="inputForm">
                @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger", id = "validationSummary" })

                    <div class="form-group row">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "emailInput", placeholder = AccountRes.EmailLabel })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger inputError" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.Surname, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", id = "surnameInput", placeholder = AccountRes.SurnameLabel })
                            @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger inputError" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "firstNameInput", placeholder = AccountRes.FirstNameLabel })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger inputError" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "lastNameInput", placeholder = AccountRes.LastNameLabel })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger inputError" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.Address, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", id = "addressInput", placeholder = AccountRes.AddressLabel })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger inputError" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "passwordInput", placeholder = AccountRes.PasswordLabel })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger inputError" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "confirmPasswordInput", placeholder = AccountRes.ConfirmPasswordLabel })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger inputError" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary col-md-12" id="registerBtn">@AccountRes.RegisterBtnText</button>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
    <div class="card">
        <h2 style="align-self: center">@AccountRes.AlreadyRegisteredLabel</h2>
        <br />
        <div class="d-flex justify-content-center">
            <a asp-action="Login" asp-controller="Auth" class="btn btn-primary col-md-8">@AccountRes.SignInBtnText</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}