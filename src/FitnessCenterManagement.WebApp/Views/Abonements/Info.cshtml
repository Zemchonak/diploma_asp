@using FitnessCenterManagement.WebApp.Views.Abonements.Resources
@using FitnessCenterManagement.WebApp.Views.FitnessEvents.Resources
@using FitnessCenterManagement.WebApp.Views.Shared.Resources
@using FitnessCenterManagement.WebApp.Resources
@model FitnessCenterManagement.WebApp.Models.AbonementOwnFitnessEventsModel
@{
    ViewData["Title"] = AbonementsRes.ItemLabel;
    var isManager = (User.IsInRole(FitnessCenterManagement.WebApp.Constants.ManagerRole));
}
<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-sm-12 col-lg-3 mr-5 p-3">
        <div class="card border-0">
            <img style="align-self:center; width: auto; height: auto; max-height:600px; max-width:400px"
                 src="/Abonements/@Model.Id/image" alt="Abonements Image" />
        </div>
    </div>
    <div class="col-sm-12 col-lg-8">
        <h3><strong>@AbonementsRes.NameLabel</strong>: @Model.Name</h3>
        <h3><strong>@AbonementsRes.AttendancesLabel</strong>: @Model.Attendances</h3>
        <div class="row">
            <div class="col-sm-3">
                <div class="card border-success">
                    <div class="card-body p-0 d-flex justify-content-center">
                        <h2 id="abonementCostEl" style="line-height:1.1" class="card-title text-success mt-1">@SharedStringRes.CurrencySymbol</h2>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 pl-0">
                <div class="card border-0">
                    <div class="card-body p-0">
                        <a class="btn btn-success" href="#"><h4>@SharedStringRes.BuyBtn</h4></a>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        @if (isManager)
        {
            <a id="create" href="/Abonements/@Model.Id/createEvent" class="btn btn-primary mb-2">@AbonementsRes.AddFitnessEvent</a>
        }
        <div class="form-group">
            <fieldset>
                <form action="" class="form-group" method="post">
                    <div class="table-responsive">
                        <div class="table-responsive">
                            <table id="mainItemsTable" class="table table-striped table-bordered" cellspacing="0" width="99%">
                                <thead>
                                    <tr>
                                        <th class="header text-center align-middle">@FitnessEventsRes.MinutesLabel </th>
                                        <th class="header text-center align-middle">@FitnessEventsRes.ServiceInfoLabel </th>
                                        <th class="header text-center align-middle">@FitnessEventsRes.VenueInfoLabel </th>
                                        @if (isManager)
                                        {
                                            <th data-orderable="false"></th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var one in Model.FitnessEvents)
                                    {
                                        <tr>
                                            <td class="text-center align-middle">@one.Item2.Minutes</td>
                                            <td class="text-center align-middle">@one.Item2.ServiceInfo</td>
                                            <td class="text-center align-middle">@one.Item2.VenueInfo</td>
                                            @if (isManager)
                                            {
                                                <td class="text-center align-middle"><a href="@Model.Id/removeEvent/@one.Item1" class="btn btn-outline-danger"><i class="fas fa-times"></i></a></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
        <br />
    </div>
</div>
@await Html.PartialAsync("_ReturnGrayButton", ("Index", "Abonements", SharedStringRes.GoBackBtn))



@{
    var tableLocalization = new System.Collections.Generic.Dictionary<string, string>()
    {
        ["lengthMenuText"] = JqueryTableStrings.LengthMenuString,
        ["zeroRecordText"] = JqueryTableStrings.ZeroRecordsString,
        ["infoText"] = JqueryTableStrings.InfoString,
        ["infoEmptyText"] = JqueryTableStrings.InfoEmptyString,
        ["infoFilteredText"] = JqueryTableStrings.InfoFilteredString,
        ["emptyTableText"] = JqueryTableStrings.InfoFilteredString,
        ["loadingText"] = JqueryTableStrings.LoadingString,
        ["processingText"] = JqueryTableStrings.ProcessingString,
        ["searchText"] = JqueryTableStrings.SearchString,
        ["firstText"] = JqueryTableStrings.FirstString,
        ["lastText"] = JqueryTableStrings.LastString,
        ["nextText"] = JqueryTableStrings.NextString,
        ["previousText"] = JqueryTableStrings.PreviousString,
        ["ascText"] = JqueryTableStrings.ActivateAscending,
        ["descText"] = JqueryTableStrings.ActivateDescending,
    };
}

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#mainItemsTable').DataTable({
                "language": {
                    "lengthMenu": '@tableLocalization["lengthMenuText"]',
                    "zeroRecords": '@tableLocalization["zeroRecordText"]',
                    "info": '@tableLocalization["infoText"]',
                    "infoEmpty": '@tableLocalization["infoEmptyText"]',
                    "infoFiltered": '@tableLocalization["infoFilteredText"]',
                    "emptyTable": '@tableLocalization["emptyTableText"]',
                    "thousands": " ",
                    "loadingRecords": '@tableLocalization["loadingText"]',
                    "processing": '@tableLocalization["processingText"]',
                    "search": '@tableLocalization["searchText"]',
                    "paginate": {
                        "first": '@tableLocalization["firstText"]',
                        "last": '@tableLocalization["lastText"]',
                        "next": '@tableLocalization["nextText"]',
                        "previous": '@tableLocalization["previousText"]',
                    },
                    "aria": {
                        "sortAscending": '@tableLocalization["ascText"]',
                        "sortDescending": '@tableLocalization["descText"]',
                    }
                },
                "columnDefs": [
                    { "width": "9%", "targets": 0 },
                    { "width": "15%", "targets": 3 }
                ]
            });
        });
    </script>
    <script>
        let costElement = document.getElementById("abonementCostEl");
        $.ajax({
            type: 'GET',
            url: '/Abonements/' + @Model.Id + '/price',
            error: function (error) {
                console.log('Error with receiving data: ' + error)
            },
            success: function (result) {
                costElement.innerText += result;
            }
        });
    </script>
    }
